{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "matrix-appservice-irc chart values",
  "description": "Configuration values for deploying matrix-appservice-irc with this Helm chart.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "host"
  ],
  "properties": {
    "nameOverride": {
      "type": "string",
      "default": "",
      "description": "Optional short name override used for labels and naming when fullnameOverride is empty."
    },
    "fullnameOverride": {
      "type": "string",
      "default": "",
      "description": "Optional full resource name override. When set, this takes precedence over nameOverride."
    },
    "host": {
      "type": "string",
      "minLength": 1,
      "description": "Public hostname for the media proxy ingress.",
      "examples": [
        "irc-media.example.com"
      ]
    },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "description": "Bridge deployment container image settings.",
      "properties": {
        "repository": {
          "type": "string",
          "default": "matrixdotorg/matrix-appservice-irc"
        },
        "tag": {
          "type": "string",
          "default": "release-4.0.0"
        },
        "pullPolicy": {
          "type": "string",
          "enum": [
            "Always",
            "IfNotPresent",
            "Never"
          ],
          "default": "IfNotPresent"
        }
      }
    },
    "replicas": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Bridge deployment replicas."
    },
    "bridge": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "resources": {
          "type": "object",
          "default": {},
          "description": "Bridge container resource requests and limits."
        }
      }
    },
    "pool": {
      "type": "object",
      "additionalProperties": false,
      "description": "Pool worker deployment settings.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repository": {
              "type": "string",
              "default": "matrixdotorg/matrix-appservice-irc"
            },
            "tag": {
              "type": "string",
              "default": "release-4.0.0"
            },
            "pullPolicy": {
              "type": "string",
              "enum": [
                "Always",
                "IfNotPresent",
                "Never"
              ],
              "default": "IfNotPresent"
            }
          }
        },
        "metricsPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 7002
        },
        "metricsHost": {
          "type": "string",
          "default": "0.0.0.0"
        },
        "loggingLevel": {
          "type": "string",
          "default": "info"
        },
        "resources": {
          "type": "object",
          "default": {}
        }
      }
    },
    "waitForRedis": {
      "type": "object",
      "additionalProperties": false,
      "description": "Kubernetes init-container gate used by bridge and pool to wait for bundled Redis readiness (runtime ordering, not Helm ordering).",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repository": {
              "type": "string",
              "default": "busybox"
            },
            "tag": {
              "type": "string",
              "default": "1.36"
            },
            "pullPolicy": {
              "type": "string",
              "enum": [
                "Always",
                "IfNotPresent",
                "Never"
              ],
              "default": "IfNotPresent"
            }
          }
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 6379
        },
        "sleepSeconds": {
          "type": "integer",
          "minimum": 1,
          "default": 2
        }
      }
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "description": "Bridge Service ports.",
      "properties": {
        "appservicePort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8090
        },
        "mediaProxyPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 11111
        }
      }
    },
    "homeserver": {
      "type": "object",
      "additionalProperties": false,
      "description": "Matrix homeserver connectivity used in generated bridge config.",
      "required": [
        "domain"
      ],
      "properties": {
        "url": {
          "type": "string",
          "minLength": 1,
          "default": "http://ess-synapse.ess.svc.cluster.local:8008"
        },
        "domain": {
          "type": "string",
          "minLength": 1,
          "default": "",
          "description": "Matrix homeserver domain. Also used to generate user and alias regex entries in appservice registration."
        }
      }
    },
    "mediaProxy": {
      "type": "object",
      "additionalProperties": false,
      "description": "Media proxy settings used in generated bridge config.",
      "properties": {
        "signingKeyPath": {
          "type": "string",
          "default": "/data/media-proxy-signing-key.jwk",
          "description": "Path in container where media proxy signing key file is mounted."
        },
        "signingKey": {
          "type": "string",
          "default": "",
          "description": "Inline media proxy signing key file content (JWK JSON). If empty, sourced from mediaProxy.existingSecret when set; otherwise auto-generated when mediaProxy.autoGenerate=true and mediaProxy.managedSecret.enabled=true."
        },
        "signingKeySecretKey": {
          "type": "string",
          "default": "media-proxy-signing-key.jwk",
          "minLength": 1,
          "pattern": "^[^/]+$",
          "description": "Secret data key used for media proxy signing key file."
        },
        "existingSecret": {
          "type": "string",
          "default": "",
          "description": "Existing Secret name containing mediaProxy.signingKeySecretKey. When set, chart-managed signing key Secret is not created."
        },
        "managedSecret": {
          "type": "object",
          "additionalProperties": false,
          "description": "Controls creation and naming of chart-managed media proxy signing key Secret.",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "name": {
              "type": "string",
              "default": ""
            }
          }
        },
        "autoGenerate": {
          "type": "boolean",
          "default": true,
          "description": "Auto-generate missing signing key only when using chart-managed Secret mode."
        },
        "ttlSeconds": {
          "type": "integer",
          "minimum": 1,
          "default": 3600
        },
        "bindPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 11111
        },
        "publicUrl": {
          "type": "string",
          "default": "",
          "description": "Optional explicit public media proxy URL. If empty, defaults to https://<host>."
        }
      }
    },
    "ircClients": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": {
          "type": "string",
          "default": "pool"
        }
      }
    },
    "connectionPool": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "persistConnectionsOnShutdown": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "config": {
      "type": "object",
      "additionalProperties": false,
      "description": "Additional raw YAML merged into generated config.yaml. Overlaps with Helm-managed keys fail template rendering.",
      "properties": {
        "extra": {
          "type": "string",
          "default": ""
        }
      }
    },
    "database": {
      "type": "object",
      "additionalProperties": false,
      "description": "Database connection settings used by generated bridge config and bundled Postgres secret.",
      "properties": {
        "engine": {
          "type": "string",
          "default": "postgres"
        },
        "name": {
          "type": "string",
          "default": "matrix_irc"
        },
        "user": {
          "type": "string",
          "default": "matrix_irc"
        },
        "password": {
          "type": "string",
          "default": "matrix_irc_password"
        },
        "connectionString": {
          "type": "string",
          "default": "",
          "description": "Optional full DSN override. Required when postgres.enabled=false."
        }
      }
    },
    "registration": {
      "type": "object",
      "additionalProperties": false,
      "description": "Appservice registration values rendered into ConfigMaps.",
      "properties": {
        "id": {
          "type": "string",
          "default": "irc"
        },
        "senderLocalpart": {
          "type": "string",
          "default": "appservice-irc"
        },
        "rateLimited": {
          "type": "boolean",
          "default": false
        },
        "asToken": {
          "type": "string",
          "default": "",
          "description": "Appservice as_token. If empty, sourced from registration.existingSecret when set; otherwise auto-generated when registration.autoGenerate=true and registration.managedSecret.enabled=true."
        },
        "hsToken": {
          "type": "string",
          "default": "",
          "description": "Appservice hs_token. If empty, sourced from registration.existingSecret when set; otherwise auto-generated when registration.autoGenerate=true and registration.managedSecret.enabled=true."
        },
        "existingSecret": {
          "type": "string",
          "default": "",
          "description": "Existing Secret name with keys asToken/hsToken. When set, chart-managed registration token Secret is not created."
        },
        "managedSecret": {
          "type": "object",
          "additionalProperties": false,
          "description": "Controls creation and naming of chart-managed registration token Secret.",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "name": {
              "type": "string",
              "default": ""
            }
          }
        },
        "autoGenerate": {
          "type": "boolean",
          "default": true,
          "description": "Auto-generate missing registration tokens only when using chart-managed Secret mode."
        },
        "protocols": {
          "type": "array",
          "default": [
            "irc"
          ],
          "items": {
            "type": "string"
          }
        },
        "serviceUrl": {
          "type": "string",
          "default": "",
          "description": "Optional appservice URL override in the registration file."
        },
        "createSynapseConfigMap": {
          "type": "boolean",
          "default": true
        },
        "synapseNamespace": {
          "type": "string",
          "default": "",
          "description": "Namespace where duplicate registration ConfigMap should be created. Defaults to release namespace when empty."
        },
        "synapseConfigMapName": {
          "type": "string",
          "default": ""
        }
      }
    },
    "postgres": {
      "type": "object",
      "additionalProperties": false,
      "description": "Bundled Postgres settings.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repository": {
              "type": "string",
              "default": "postgres"
            },
            "tag": {
              "type": "string",
              "default": "16-alpine"
            },
            "pullPolicy": {
              "type": "string",
              "enum": [
                "Always",
                "IfNotPresent",
                "Never"
              ],
              "default": "IfNotPresent"
            }
          }
        },
        "service": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "default": 5432
            }
          }
        },
        "persistence": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "accessMode": {
              "type": "string",
              "enum": [
                "ReadWriteOnce",
                "ReadOnlyMany",
                "ReadWriteMany",
                "ReadWriteOncePod"
              ],
              "default": "ReadWriteOnce"
            },
            "size": {
              "type": "string",
              "default": "10Gi"
            },
            "storageClassName": {
              "type": "string",
              "default": ""
            }
          }
        },
        "resources": {
          "type": "object",
          "default": {}
        }
      }
    },
    "redis": {
      "type": "object",
      "additionalProperties": false,
      "description": "Bundled Redis settings.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repository": {
              "type": "string",
              "default": "redis"
            },
            "tag": {
              "type": "string",
              "default": "7-alpine"
            },
            "pullPolicy": {
              "type": "string",
              "enum": [
                "Always",
                "IfNotPresent",
                "Never"
              ],
              "default": "IfNotPresent"
            }
          }
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "redis-server",
            "--appendonly",
            "yes"
          ]
        },
        "url": {
          "type": "string",
          "default": "",
          "description": "Optional full Redis URL override. Required when redis.enabled=false."
        },
        "service": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "default": 6379
            }
          }
        },
        "persistence": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "accessMode": {
              "type": "string",
              "enum": [
                "ReadWriteOnce",
                "ReadOnlyMany",
                "ReadWriteMany",
                "ReadWriteOncePod"
              ],
              "default": "ReadWriteOnce"
            },
            "size": {
              "type": "string",
              "default": "5Gi"
            },
            "storageClassName": {
              "type": "string",
              "default": ""
            }
          }
        },
        "resources": {
          "type": "object",
          "default": {}
        }
      }
    },
    "ingress": {
      "type": "object",
      "additionalProperties": false,
      "description": "Ingress settings for exposing media proxy.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "name": {
          "type": "string",
          "default": ""
        },
        "className": {
          "type": "string",
          "default": "traefik"
        },
        "path": {
          "type": "string",
          "default": "/"
        },
        "pathType": {
          "type": "string",
          "enum": [
            "Prefix",
            "Exact",
            "ImplementationSpecific"
          ],
          "default": "Prefix"
        },
        "clusterIssuer": {
          "type": "string",
          "default": "letsencrypt-prod"
        },
        "tls": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "secretName": {
              "type": "string",
              "default": "matrix-appservice-irc-media-proxy-tls"
            }
          }
        }
      }
    },
    "podSecurityContext": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "seccompProfile": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "RuntimeDefault",
                "Localhost",
                "Unconfined"
              ],
              "default": "RuntimeDefault"
            },
            "localhostProfile": {
              "type": "string",
              "default": ""
            }
          }
        }
      }
    },
    "securityContext": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "allowPrivilegeEscalation": {
          "type": "boolean",
          "default": false
        },
        "readOnlyRootFilesystem": {
          "type": "boolean",
          "default": false
        },
        "capabilities": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [
                "ALL"
              ]
            }
          }
        }
      }
    }
  }
}
